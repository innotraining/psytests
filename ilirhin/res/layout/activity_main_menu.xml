<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/MainMenuStartTestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="218sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:onClick="onMainMenuStartTestButtonClick"
        android:text="@string/start_test" />

    <Button
        android:id="@+id/MainMenuViewResultsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/MainMenuStartTestButton"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="70sp"
        android:text="@string/view_results"
        android:onClick="onMainMenuViewResultsButtonClick"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <Button
         android:id="@+id/UserActionReturn"
         android:layout_width="match_parent"
         android:layout_height="50sp"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:onClick="onUserActionReturnClick"
         android:text="@string/return_to_chosing_users" />

     <Button
         android:id="@+id/UserActionDeleteUser"
         android:layout_width="match_parent"
         android:layout_height="80sp"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:gravity="center"
         android:onClick="onUserActionDeleteUserClick"
         android:text="@string/delete_user" />

     <Button
         android:id="@+id/UserActionGoTest"
         android:layout_width="match_parent"
         android:layout_height="50sp"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:gravity="center"
         android:onClick="onUserActionGoTestClick"
         android:text="@string/go_test" />

</RelativeLayout>
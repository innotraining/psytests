<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="Incomplete Pattern"
        android:src="@drawable/a2_background" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_centerVertical="true"
        android:background="@android:drawable/btn_default_small"
		android:onClick="onAnswerCick"
		android:tag="0"
        android:src="@drawable/a2_answer_w0" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView1"
        android:layout_centerVertical="true"
        android:layout_marginRight="74dp"
        android:background="@android:drawable/btn_default_small"
		android:onClick="onAnswerCick"
		android:tag="1"
        android:src="@drawable/a2_answer_w1" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_below="@+id/imageButton1"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/btn_default_small"
		android:onClick="onAnswerCick"
		android:tag="2"
        android:src="@drawable/a2_answer_w1" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton3"
        android:background="@android:drawable/btn_default_small"
		android:onClick="onAnswerCick"
		android:tag="3"
        android:src="@drawable/a2_answer_w1" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_below="@+id/imageButton3"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/btn_default_small"
		android:onClick="onAnswerCick"
		android:tag="4"
        android:src="@drawable/a2_answer_w1" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignTop="@+id/imageButton5"
        android:background="@android:drawable/btn_default_small"
		android:onClick="onAnswerCick"
		android:tag="5"
        android:src="@drawable/a2_answer_w1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageButton5"
        android:layout_marginBottom="32dp"
		android:onClick="onAnswerCick"
        android:text="TextView" />

</RelativeLayout>
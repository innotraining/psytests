<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="Incomplete Pattern"
        android:src="@drawable/a1_background" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_below="@+id/imageButton1"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/btn_default_small"
		android:onClick="onAnswerCick"
		android:tag="2"
        android:src="@drawable/a2_answer_w1" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton3"
        android:background="@android:drawable/btn_default_small"
		android:onClick="onAnswerCick"
		android:tag="3"
        android:src="@drawable/a2_answer_w1" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_below="@+id/imageButton3"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/btn_default_small"
		android:onClick="onAnswerCick"
		android:tag="4"
        android:src="@drawable/a2_answer_w1" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignTop="@+id/imageButton5"
        android:background="@android:drawable/btn_default_small"
		android:onClick="onAnswerCick"
		android:tag="5"
        android:src="@drawable/a2_answer_w1" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton3"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/imageButton1"
        android:background="@android:drawable/btn_default_small"
        android:onClick="onAnswerCick"
        android:src="@drawable/a2_answer_w1"
        android:tag="1" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="106dp"
        android:background="@android:drawable/btn_default_small"
        android:onClick="onAnswerCick"
        android:src="@drawable/a2_answer_w0"
        android:tag="0" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/buttonOK"
        android:onClick="onAnswerCick"
        android:text="Один из этих кусочков подходит. Для каждой картинки есть только один верный ответ. Выбери правильный кусочек картинки." />

    <Button
        android:id="@+id/buttonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:onClick="OKClicked"
        android:text="OK" />

</RelativeLayout>